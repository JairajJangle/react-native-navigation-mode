{
  "name": "react-native-navigation-mode",
  "version": "1.2.7",
  "description": "Detect Android navigation mode (3-button, 2-button, or gesture)",
  "main": "./lib/module/index.js",
  "react-native": "./lib/module/index.js",
  "source": "src/index.tsx",
  "types": "./lib/typescript/src/index.d.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "expo-module.config.json",
    "app.plugin.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-navigation-mode-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "android",
    "ios",
    "navigation",
    "gesture",
    "navigation-buttons",
    "edge-to-edge",
    "navigation-bar",
    "react-native-edge-to-edge",
    "turbo-module",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JairajJangle/react-native-navigation-mode.git"
  },
  "author": "https://github.com/JairajJangle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JairajJangle/react-native-navigation-mode/issues"
  },
  "homepage": "https://github.com/JairajJangle/react-native-navigation-mode#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@expo/config-plugins": "^10.1.2",
    "@react-native/babel-preset": "0.79.7",
    "@react-native/eslint-config": "0.79.7",
    "@release-it/conventional-changelog": "^9.0.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/npm": "^13.1.4",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.0",
    "commitlint": "^20.4.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "19.0.0",
    "react-native": "0.79.7",
    "react-native-builder-bob": "^0.40.17",
    "react-test-renderer": "19.0.0",
    "release-it": "^19.2.4",
    "semantic-release": "^25.0.3",
    "turbo": "^1.10.7",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": ">=0.77.0"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.9.2",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "NavigationModeSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.navigationmode"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.50.3"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://www.paypal.com/paypalme/jairajjangle001/usd"
    },
    {
      "type": "individual",
      "url": "https://liberapay.com/FutureJJ/donate"
    },
    {
      "type": "individual",
      "url": "https://ko-fi.com/futurejj"
    }
  ]
}
